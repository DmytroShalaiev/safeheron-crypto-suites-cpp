ELSEIF (CMAKE_SYSTEM_NAME MATCHES "Windows")
    MESSAGE(STATUS "current platform: Windows")
    set_and_check(SafeheronCryptoSuites_LIBRARY "${CMAKE_INSTALL_PREFIX}/lib/libSafeheronCryptoSuites.dll")
ELSE ()
    MESSAGE(STATUS "other platform: ${CMAKE_SYSTEM_NAME}")
    set_and_check(SafeheronCryptoSuites_LIBRARY "${CMAKE_INSTALL_PREFIX}/lib/libSafeheronCryptoSuites.so")
ENDIF (CMAKE_SYSTEM_NAME MATCHES "Darwin")

MESSAGE(STATUS "###################################")